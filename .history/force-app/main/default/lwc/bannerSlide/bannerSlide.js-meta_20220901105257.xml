            <property name="slider1" label="SLIDE 1" type="String" datasource="ATIVO,INATIVO" default="ATIVO"/>
            <property name="position1" label="Selecione a posição do Slide (APENAS 1 PARA CADA SLIDE)" type="String" datasource="1,2,3,4,5" default="1"/>
            <property name="desktopImg1" label="Imagem para Desktop" type="ContentReference" filter="cms_image"/>
            <property name="mobileImg1" label="Imagem para Mobile" type="ContentReference" filter="cms_image"/>
            <property name="slideLink1" label="Link da campanha" type="String"/>
            <property name="startDate1" label="Data de início mm/dd/aaaa" type="String"/>
            <property name="endDate1" label="Data de fim mm/dd/aaaa" type="String"/>
